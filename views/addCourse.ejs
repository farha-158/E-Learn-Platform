<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Course</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <div class="card shadow p-4 mx-auto" style="max-width: 500px;">
        <h2 class="text-center mb-4">Add New Course</h2>
        <form id="addCourseForm" autocomplete="off" enctype="multipart/form-data">
            <div class="mb-3">
                <input type="text" class="form-control" placeholder="Course Name" name="name" required />
            </div>
            <div class="mb-3">
                <select class="form-select " name="instructor" required>
                <option value="" disabled selected>Select instructor</option>
                <% b.forEach(l=>{ %>
                    <option value='<%= l._id %>' > 
                        <%= l.name  %>--><%= l.email %>
                    </option>
                <%  }) %>
            </select>
            </div>
            <div class="mb-3">
                <input type="date" class="form-control" name="releaseDate" required />
            </div>
            <div class="mb-3">
                <input type="number" step="0.01" class="form-control" placeholder="Price (USD)" name="price" required />
            </div>
            <div class="mb-3">
                <textarea class="form-control" placeholder="Course Description" name="description" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <input type="file" class="form-control" placeholder="Choose Thumbnail Image" name="thumbnailImage" required />
            </div>
            <div class="mb-3">
                <input type="number" class="form-control" placeholder="Number of Videos" name="videoCount" min="1" required />
            </div>
            <div class="mb-3">
                <input type="number" step="0.5" class="form-control" placeholder="Course Duration (Hours)" name="courseDuration" min="1" required />
            </div>
            <div class="mb-3">
            <select class="form-select" name="language" required>
                <option value="" disabled selected>Select Language</option>
                <% language.forEach(l=>{ %>
                    <option value='<%= l %>'><%= l %></option>
                <%  }) %>
            </select>
            </div>
            <div class="mb-3">
            <select class="form-select" name="level" required>
                <option value="" disabled selected>Select Level</option>
                <% level.forEach(l=>{ %> 
                    <option value="<%= l %>"><%= l %></option>
                <% }) %>
            </select>
            </div>

            <button type="submit" class="btn btn-primary w-100">Add Course</button>
        </form>

        <p id="message" class="text-center mt-3"></p>
        </div>
    </div>

    <script>
        const form = document.getElementById("addCourseForm");
        const message = document.getElementById("message");

        form.addEventListener("submit", async (e) => {
        e.preventDefault();

        const formData = new FormData(form);

        
        message.textContent = "Adding course...";
        message.className = "text-info";

        try {
            const res = await fetch("/addCourse", {
            method: "POST",
            body: formData,
            });

            const data = await res.json();
            console.log(data)
            form.reset();
            /* if (data.success) {
            message.textContent = data.message || "Course added successfully!";
            message.className = "text-success";
            form.reset();
            } else {
            message.textContent = data.error || "Failed to add course.";
            message.className = "text-danger";
            }*/
        } catch (err) {
            message.textContent = "Server error. Please try again.";
            message.className = "text-danger";
        }
        });
    </script>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
