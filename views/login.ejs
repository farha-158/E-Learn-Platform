<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login</title>

  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <div class="card shadow p-4 mx-auto" style="max-width: 400px;">
      <h2 class="text-center mb-4">Login</h2>

      <form id="loginForm">
        <div class="mb-3">
          <input type="email" class="form-control" placeholder="Email" name="email" required />
        </div>
        <div class="mb-3">
          <input type="password" class="form-control" placeholder="Password" name="password" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Login</button>
      </form>

      <p id="message" class="text-center mt-3"></p>

      <div class="text-center mt-3">
        <p>Don't have an account? 
          <a href="/signup" class="text-decoration-none text-primary fw-semibold">Sign Up</a>
        </p>
        <a href="/auth/google" class="btn btn-outline-danger w-100 mt-2">
          <img 
            src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" 
            alt="Google" 
            width="20" 
            class="me-2"
          />
          Sign in with Google
        </a>

        <div class="mt-3">
          <a href="/forgot-password" class="text-decoration-none text-secondary">
            Forgot your password?
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById("loginForm");
    const message = document.getElementById("message");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = {
        email: form.email.value.trim(),
        password: form.password.value,
      };

      try {
        const res = await fetch("/login", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(formData),
          credentials: "include"
        });

        const data = await res.json();
        
        if (data.success) {
          message.textContent = data.data.msg || "Login successful!";
          message.className = "text-success";
          console.log(data.data.userId)
          setTimeout(() => {

            window.location.href = `/${data.data.userId}`;
          }, 1000);
        } else {
            message.innerHTML = "";
            for(i=0;i<(data.error).length;i++){
              
              message.textContent = (data.error)[i].message || "Invalid credentials";
              message.className = "text-danger";
          }
          
        }
      } catch (err) {
        message.textContent = "Server error. Please try again.";
        message.className = "text-danger";
      }
    });
  </script>

  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
