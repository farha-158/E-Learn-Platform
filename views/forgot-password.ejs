<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Forgot Password</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <div class="card mx-auto shadow p-4" style="max-width:420px;">
      <h3 class="text-center mb-3">Forgot Password</h3>

      <form id="forgotForm" autocomplete="off">
        <div class="mb-3">
          <input 
            type="email" 
            id="email" 
            name="email" 
            class="form-control" 
            placeholder="Enter your email" 
            required 
          />
        </div>

        <button class="btn btn-primary w-100" type="submit">Send verification code</button>
      </form>

      <p id="message" class="text-center mt-3"></p>

      <div class="text-center mt-2">
        <a href="/login" class="text-decoration-none">Back to Login</a>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById('forgotForm');
    const msg = document.getElementById('message');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      msg.textContent = '';
      msg.className = '';

      const email = document.getElementById('email').value.trim();
      if (!email) {
        msg.textContent = 'Please enter your email';
        msg.className = 'text-danger';
        return;
      }

      try {
        const res = await fetch('/forgot-password', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email }),
        });

        const data = await res.json();

        console.log(data) 

        if (data.success) {
          msg.textContent = data.data.msg || 'Verification code sent â€” check your email.';
          msg.className = 'text-success';

          setTimeout(() => {
            window.location.href = `/verify-code?email=${encodeURIComponent(email)}`;
          }, 1500);
        } else {
            msg.innerHTML = "";
            for(i=0;i<(data.error).length;i++){
              
              msg.textContent = (data.error)[i].message || 'Email not found in database';
              msg.className = "text-danger";
          }
        }
      } catch (err) {
        msg.textContent = 'Server error. Try again.';
        msg.className = 'text-danger';
      }
    });
  </script>

  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
